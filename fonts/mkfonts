#!/bin/sh

./fontconv.exe -a 6 -s '0x20-0x7e,0xb1,0xb5' tiny5-Medium.bdf ../platform.io/src/fonts/font_tiny5_1.h
./fontconv.exe -s '0x20-0x81,0xb1,0xb5' radpro-robotoR8.bdf ../platform.io/src/fonts/font_robotoR8_1.h
./fontconv.exe -s '0x2e,0x30-0x39,0x7f' radpro-robotoM33-digits.bdf ../platform.io/src/fonts/font_robotoM33_1_digits.h
./fontconv.exe -s '0x30-0x38' radpro-symbols6.bdf ../platform.io/src/fonts/font_symbols6_1.h
./fontconv.exe -s '0x40-0x56' radpro-chess8.bdf ../platform.io/src/fonts/font_chess8_1.h

./fontconv.exe -b 3 -p 17 -d 4 -c 12 -s '0x20-0x7e,0xb1,0xb5' radpro-Roboto-Medium.ttf ../platform.io/src/fonts/font_robotoR12_3.h
./fontconv.exe -b 3 -p 25 -c 18 -s '0x20-0x81,0xb1,0xb5' radpro-Roboto-Medium.ttf ../platform.io/src/fonts/font_robotoR18_3.h
./fontconv.exe -b 3 -p 118 -c 86 -s '0x2e,0x30-0x39,0x7f' radpro-Roboto-Medium.ttf ../platform.io/src/fonts/font_robotoR86_3_digits.h
./fontconv.exe -b 3 -p 86 -c 63 -s '0x2e,0x30-0x39,0x7f' radpro-Roboto-Medium.ttf ../platform.io/src/fonts/font_robotoR63_3_digits.h
./fontconv.exe -b 3 -p 30 -s '0x30-0x36' radpro-Material-Symbols.ttf ../platform.io/src/fonts/font_symbols30_3.h
./fontconv.exe -b 3 -p 25 -s '0x40-0x47' radpro-chess-FreeSerif.ttf ../platform.io/src/fonts/font_chess25_3.h

./fontconv.exe -b 4 -p 17 -d 4 -c 12 -s '0x20-0x7e,0xb1,0xb5' radpro-Roboto-Medium.ttf ../platform.io/src/fonts/font_robotoR12_4.h
./fontconv.exe -b 4 -p 25 -c 18 -s '0x20-0x81,0xb1,0xb5' radpro-Roboto-Medium.ttf ../platform.io/src/fonts/font_robotoR18_4.h
./fontconv.exe -b 4 -p 118 -c 86 -s '0x2e,0x30-0x39,0x7f' radpro-Roboto-Medium.ttf ../platform.io/src/fonts/font_robotoR86_4_digits.h
./fontconv.exe -b 4 -p 86 -c 63 -s '0x2e,0x30-0x39,0x7f' radpro-Roboto-Medium.ttf ../platform.io/src/fonts/font_robotoR63_4_digits.h
./fontconv.exe -b 4 -p 30 -s '0x30-0x36' radpro-Material-Symbols.ttf ../platform.io/src/fonts/font_symbols30_4.h
./fontconv.exe -b 4 -p 25 -s '0x40-0x47' radpro-chess-FreeSerif.ttf ../platform.io/src/fonts/font_chess25_4.h
